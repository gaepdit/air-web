@page
@model IndexModel
@{
    ViewData["Title"] = "Facilities";
}

<h1>@ViewData["Title"]</h1>

<p>
    Here is a list of facilities for testing purposes.
</p>

<ul>
    @foreach (var facility in Model.Facilities)
    {
        <li>
            <a asp-page="/Facility/Details" asp-route-facilityId="@facility.FacilityId"
               class="link-underline link-underline-opacity-25 link-underline-opacity-100-hover link-offset-2">
                @facility.FacilityId
            </a>
        </li>
    }
</ul>
