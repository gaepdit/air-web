@page "{id:int?}"
@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RestoreModel

@{
    ViewData["Title"] = $"Restore FCE #{Model.Id}";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-warning-emphasis font-weight-medium">Are you sure you want to restore this deleted FCE?</p>

    <dl class="row">
        <dt class="col-sm-4 col-lg-3">Facility</dt>
        <dd class="col-sm-8 col-lg-9">
            <partial name="Shared/CompliancePartials/_FacilityAirsName" model="Model.ItemView.Facility" />
        </dd>
        <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(m => m.ItemView.Year)</dt>
        <dd class="col-sm-8 col-lg-9">
            <strong class="text-info-emphasis">@Model.ItemView.Year.ToString()</strong>
        </dd>
    </dl>
    <p>
        <em>If this FCE is restored, the following deletion details will be removed.</em>
    </p>
    <dl class="row">
        <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(m => m.ItemView.DeletedBy)</dt>
        <dd class="col-sm-8 col-lg-9">@Html.DisplayFor(m => m.ItemView.DeletedBy, DisplayTemplate.NameOrPlaceholder)</dd>
        <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(m => m.ItemView.DeletedAt)</dt>
        <dd class="col-sm-8 col-lg-9">@Html.DisplayFor(m => m.ItemView.DeletedAt, DisplayTemplate.ShortDateTimeOffset)</dd>
        <dt class="mb-2">@Html.DisplayNameFor(m => m.ItemView.DeleteComments)</dt>
        <dd>
            <div class="text-break text-pre-line border rounded p-3">@Html.DisplayFor(m => m.ItemView.DeleteComments, DisplayTemplate.TextOrPlaceholder)</div>
        </dd>
    </dl>

    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-warning col-5 col-sm-3 col-lg-2 me-2">Restore</button>
            <a asp-page="Details" asp-route-id="@Model.Id.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
