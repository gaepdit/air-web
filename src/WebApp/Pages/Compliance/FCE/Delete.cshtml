@page "{id:int?}"
@using AirWeb.WebApp.Pages.Shared.EditorTemplates
@model DeleteModel

@{
    ViewData["Title"] = $"Delete FCE #{Model.Id}";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm:</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">Are you sure you want to delete this FCE?</p>
    <p>
        Deleted FCEs are not removed from the database, but they are hidden from most search results and
        views and are not publicly available.
    </p>

    <dl class="row">
        <dt class="col-sm-4 col-lg-3">Facility</dt>
        <dd class="col-sm-8 col-lg-9">
            <partial name="Shared/FacilityPartials/_FacilityAirsName" model="Model.ItemSummary.Facility" />
        </dd>
        <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(m => m.ItemSummary.Year)</dt>
        <dd class="col-sm-8 col-lg-9">
            <strong class="text-info-emphasis">@Model.ItemSummary.Year.ToString()</strong>
        </dd>
    </dl>

    <form method="post">
        <div class="mb-3">
            @Html.EditorFor(m => m.StatusComment.Comment, EditorTemplate.Textarea, new { Rows = 3 })
        </div>
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-page="Details" asp-route-id="@Model.Id.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
