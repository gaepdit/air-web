@page "{facilityId?}"
@using AirWeb.WebApp.Pages.Shared.EditorTemplates
@using AirWeb.WebApp.Platform.PageModelHelpers
@using GaEpd.AppLibrary.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using LabelTagHelper = Microsoft.AspNetCore.Mvc.TagHelpers.LabelTagHelper
@model AddModel
@{
    ViewData["Title"] = $"Add a new {Model.EntryType.GetDescription()} Entry";
    ViewData["NoAnchors"] = "True";
}

<h1>@ViewData["Title"]</h1>

<div class="p-3 border border-primary-subtle rounded-3 bg-light-subtle">
    <form method="post" enctype="multipart/form-data" id="new-fce-form">
        <div asp-validation-summary="All" class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                <path
                    d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
            </svg>
        </div>

        <div class="mb-3">
            Facility: <br />
            <partial name="Compliance/_Partials/_FacilityAirsName" model="Model.Facility" />
        </div>
        <div class="row">
            <div class="col-md mb-3">
                @Html.EditorFor(m => m.Item.ResponsibleStaffId, EditorTemplate.Select,
                    additionalViewData: new { Items = Model.StaffSelectList, Placeholder = DefaultText.SelectOptionRequired })
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(m => m.Item.AcknowledgmentLetterDate, EditorTemplate.InputDateOnlyNullable)
            </div>
        </div>

        <div class="row">
            <div class="col-md mb-3">
                @Html.EditorFor(m => m.Item.ReceivedDate, EditorTemplate.InputDateOnly)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(m => m.Item.PermitRevocationDate, EditorTemplate.InputDateOnly)
            </div>
            <div class="col-md mb-2">
                <div class="form-floating">
                    <input asp-for="Item.PhysicalShutdownDate" class="form-control" />
                    <label asp-for="Item.PhysicalShutdownDate" class="form-label"></label>
                    <span asp-validation-for="Item.PhysicalShutdownDate" class="invalid-feedback"></span>
                </div>
            </div>
            <small id="PhysicalShutdownDateHelpText" class="col-12 form-text text-body-secondary d-inline-block mb-3">
                (Note: Physical shutdown date is optional. Setting a physical shutdown date will <strong>not</strong>
                change the facility operating status or CMS status. A manager will need to make those changes.)
            </small>
        </div>

        <div class="mb-3">
            <input asp-for="Item.FollowupTaken" class="form-check-input" aria-describedby="FollowupTakenHelpText" />
            <label asp-for="Item.FollowupTaken" class="form-check-label"></label>
            <small id="FollowupTakenHelpText" class="form-text text-body-secondary d-inline-block px-2">
                (Note: A permit revocation cannot be the discovery event for an enforcement action.)
            </small>
        </div>

        <div class="row">
            <div class="mb-3">
                @Html.EditorFor(m => m.Item.Notes, EditorTemplate.Textarea, new { Rows = 5 })
            </div>
        </div>

        <div class="mt-3 mb-1">
            <button id="SubmitButton" type="submit" class="btn btn-primary me-2">
                Add New @Model.EntryType.GetDescription()
            </button>
            <a asp-page="/Facility/Details/" asp-route-facilityId="@Model.Facility.Id"
               class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
        <div class="text-danger-emphasis mt-3">* denotes a required field</div>
        <input asp-for="Item.FacilityId" type="hidden" />
    </form>
</div>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial" />
}
