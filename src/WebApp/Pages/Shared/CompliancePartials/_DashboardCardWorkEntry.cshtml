@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model AirWeb.WebApp.Pages.Dashboard.DashboardIndexModel.DashboardCard

<div class="card mt-4">
    <div class="card-header">
        <h2 id="@Model.CardId" class="h5">@Model.Title</h2>
    </div>
    <div class="card-body">

        @if (Model.WorkEntries.Count == 0)
        {
            <p>
                <em>None.</em>
            </p>
        }
        else
        {
            <div class="table-responsive-md">
                <table class="table table-borderless table-hover mb-0" aria-describedby="@Model.CardId">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Event Date</th>
                        <th scope="col">Entry Type</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var entry in Model.WorkEntries)
                    {
                        <tr>
                            <th scope="row" class="align-middle">
                                <a asp-page="/Compliance/Work/Details" asp-route-id="@entry.Id.ToString()"
                                   class="btn btn-outline-primary btn-sm">
                                    @entry.Id.ToString()
                                </a>
                            </th>
                            <td class="text-nowrap">@Html.DisplayFor(_ => entry.EventDate, DisplayTemplate.ShortDateOnly)</td>
                            <td>@entry.WorkEntryType.GetDisplayName()</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
