@using AirWeb.AppServices.CommonSearch
@using AirWeb.AppServices.Compliance.Fces.Search
@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model IList<AirWeb.AppServices.Compliance.Fces.Search.FceSearchResultDto>
@{
    var searchSpec = (ISearchDto?)ViewData["SearchSpec"];
    var hideFacility = (bool?)ViewData["HideFacility"] ?? false;
    var rowCss = searchSpec is null ? "" : "align-middle";
    var linkCss = searchSpec is null ? "fw-normal link-offset-1" : "btn btn-sm btn-outline-primary";
}

<div class="table-responsive-md">
    <table class="table table-hover mb-0" aria-label="FCE results table">
        <thead>
        <tr>
            @if (searchSpec is null)
            {
                <th scope="col" class="text-nowrap">Tracking #</th>
                <th scope="col" class="text-nowrap">FCE Date</th>
                <th scope="col" class="text-nowrap">FCE Year</th>
                @if (!hideFacility)
                {
                    <th scope="col" class="text-nowrap">Facility</th>
                }
            }
            else
            {
                <partial name="Shared/_SortableTableColHead" model="searchSpec" view-data="new ViewDataDictionary(ViewData)"
                         view-data-Heading="@("Tracking #")" view-data-Ascender="@nameof(FceSortBy.IdAsc)" view-data-Descender="@nameof(FceSortBy.IdDesc)" />
                <th scope="col" class="text-nowrap">FCE Date</th>
                <partial name="Shared/_SortableTableColHead" model="searchSpec" view-data="new ViewDataDictionary(ViewData)"
                         view-data-Heading="@("FCE Year")" view-data-Ascender="@nameof(FceSortBy.YearAsc)" view-data-Descender="@nameof(FceSortBy.YearDesc)" />
                @if (!hideFacility)
                {
                    <partial name="Shared/_SortableTableColHead" model="searchSpec" view-data="new ViewDataDictionary(ViewData)"
                             view-data-Heading="@("Facility")" view-data-Ascender="@nameof(FceSortBy.FacilityIdAsc)" view-data-Descender="@nameof(FceSortBy.FacilityIdDesc)" />
                }
            }
            <th scope="col" class="text-nowrap">Onsite Inspection</th>
            <th scope="col" class="text-nowrap">Responsible Staff</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" class="@rowCss">
                    <a asp-page="/Compliance/FCE/Details" asp-route-id="@item.Id.ToString()"
                       class="@linkCss">
                        @item.Id.ToString()
                    </a>
                    @if (item.IsDeleted)
                    {
                        <span class="text-danger-emphasis">DELETED</span>
                    }
                </th>
                <td class="text-nowrap">@Html.DisplayFor(_ => item.CompletedDate, DisplayTemplate.ShortDateOnly) </td>
                <td class="text-nowrap">@item.Year</td>
                @if (!hideFacility)
                {
                    <td>
                        <span class="text-nowrap">@item.FacilityId</span><br />@item.FacilityName
                    </td>
                }
                <td>@Html.DisplayFor(_ => item.OnsiteInspection, DisplayTemplate.BoolYesNo)</td>
                <td>@Html.DisplayFor(_ => item.ReviewedBy, DisplayTemplate.NameOrPlaceholder)</td>
            </tr>
        }
        </tbody>
    </table>
</div>
