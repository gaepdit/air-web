@using AirWeb.WebApp.Platform.PageModelHelpers
@model string?
@if (string.IsNullOrEmpty(Model))
{
    <span class="text-body-secondary fw-lighter">@SelectOptions.PlaceholderNotEntered</span>
}
else
{
    @if (Uri.TryCreate(Model, UriKind.Absolute, out _))
    {
        <a href="@Model" target="_blank" rel="noopener">@Model</a>
    }
    else
    {
        @Model
    }
}
