@using AirWeb.WebApp.Platform.PageModelHelpers
@model AirWeb.Domain.ValueObjects.Address?
@if (Model is null || Model.IsEmpty)
{
    <span class="text-body-secondary fw-lighter">@DefaultText.PlaceholderNotEntered</span>
}
else
{
    @if (!string.IsNullOrWhiteSpace(Model.Street))
    {
        @Model.Street<br />
    }

    @if (!string.IsNullOrWhiteSpace(Model.Street2))
    {
        @Model.Street2<br />
    }

    @if (!string.IsNullOrWhiteSpace(Model.City))
    {
        @if (string.IsNullOrWhiteSpace(Model.State))
        {
            @Model.City
        }
        else
        {
            @Model.City@:,
        }
    }

    @if (!string.IsNullOrWhiteSpace(Model.State))
    {
        @if (string.IsNullOrEmpty(Model.PostalCode))
        {
            @Model.State
        }
        else
        {
            @Model.State@:
        }
    }

    @if (!string.IsNullOrWhiteSpace(Model.PostalCode))
    {
        @:&nbsp;@Model.PostalCode
    }
}
