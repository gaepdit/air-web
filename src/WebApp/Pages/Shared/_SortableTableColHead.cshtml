@model AirWeb.AppServices.CommonSearch.ISearchDto
@{
    var heading = (string?)ViewData["Heading"] ?? "";
    var ascender = (string?)ViewData["Ascender"] ?? "";
    var descender = (string?)ViewData["Descender"] ?? "";
}
<th scope="col" class="text-nowrap">
    <a asp-fragment="SearchResults" asp-all-route-data="Model.AsRouteValues()" asp-route-handler="search"
       asp-route-Sort="@(Model.SortByName == ascender ? descender : ascender)"
       class="link-body-emphasis link-offset-2 link-underline-opacity-50 link-underline-opacity-75-hover text-dotted-underline">
        @heading
        @if (string.Equals(Model.SortByName, ascender, StringComparison.Ordinal))
        {
            @:▲
        }
        else if (string.Equals(Model.SortByName, descender, StringComparison.Ordinal))
        {
            @:▼
        }
    </a>
</th>
