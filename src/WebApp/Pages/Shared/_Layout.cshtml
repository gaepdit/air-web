@{
    var displayMessage = TempData.GetDisplayMessage();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] â€” Air Web</title>
    <partial name="Shared/_FaviconPartial" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <partial name="Shared/_RaygunScriptsPartial" />
    <script src="~/js/color-modes.js"></script>
</head>

<body id="top" class="d-flex flex-column vh-100">
<a class="skip-nav shadow border border-2 rounded border-info bg-info-subtle text-info-emphasis d-print-none" href="#main-content">Skip to main content</a>
<partial name="_TestSiteBannerPartial" />
@await Component.InvokeAsync("MainMenu", Model)

<main id="main-content" role="main" class="flex-grow-1">
    <div class="container">
        <partial name="Shared/_AlertPartial" for="@displayMessage" />
        @RenderBody()
    </div>
</main>

<footer class="footer pt-3">
    @await RenderSectionAsync("Footer", false)
    <div class="bg-body-tertiary py-2 border-bottom d-print-none">
        <div class="container">
            <a href="#top" class="footer-link link-body-emphasis icon-link ms-n1">
                <svg class="bi">
                    <use href="@Url.Content("~/images/app-icons.svg")#app-icon-arrow-bar-up"></use>
                </svg> Return to top
            </a>
        </div>
    </div>
    <div class="bg-body-secondary pt-2 pb-3">
        <div class="container">
            <small>
                Air Protection Branch Web App
                <span class="d-print-none">
                    | <a asp-page="/Support" class="footer-link text-decoration-hover link-offset-2">Support</a>
                    | <a href="https://epd.georgia.gov/" target="_blank" rel="noopener"
                         class="footer-link text-decoration-hover link-offset-2">Environmental Protection Division</a>
                </span>
                <br />&copy; @DateTime.Now.Year.ToString() State of Georgia
                <span class="d-print-none">
                    | <a href="https://georgia.gov/accessibility" target="_blank" rel="noopener"
                         class="footer-link text-decoration-hover link-offset-2">Accessibility</a>
                    | <a href="https://gadnr.org/ada" target="_blank" rel="noopener"
                         class="footer-link text-decoration-hover link-offset-2">DNR Accessibility Notice</a>
                    | <a href="https://georgia.gov/privacysecurity" target="_blank" rel="noopener"
                         class="footer-link text-decoration-hover link-offset-2">Privacy/Security</a>
                </span>
            </small>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
@if (!ViewData.ContainsKey("NoAnchors"))
{
    <script src="~/lib/anchor-js/anchor.min.js"></script>
    <script src="~/js/anchorInit.js"></script>
}
@await RenderSectionAsync("Scripts", false)
</body>
</html>
