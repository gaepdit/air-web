@model decimal
@{
    var min = (decimal?)ViewData["Min"];
    var max = (decimal?)ViewData["Max"];
    var addonId = $"addon-{Guid.NewGuid()}";
}
<label asp-for="@__model" class="form-label"></label>
<div class="input-group">
    <span class="input-group-text" id="@addonId">$</span>
    <input asp-for="@__model" type="number" class="form-control rounded-end" aria-describedby="@addonId" min="@min" max="@max" step="0.01" />
    <span asp-validation-for="@__model" class="invalid-feedback ps-2"></span>
</div>
