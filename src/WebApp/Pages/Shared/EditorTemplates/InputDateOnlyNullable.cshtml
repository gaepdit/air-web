@using AirWeb.AppServices.Utilities
@using AirWeb.Domain
@model DateOnly?
@{
    var min = (string?)ViewData["Min"] ?? ComplianceConstants.EarliestComplianceDateHtmlString;
    var max = (string?)ViewData["Max"] ?? DateTime.Today.ToString(DateTimeFormats.HtmlInputDate);
}
<div class="form-floating">
    <input asp-for="@__model" class="form-control" min="@min" max="@max" />
    <label asp-for="@__model" class="form-label"></label>
    <span asp-validation-for="@__model" class="invalid-feedback"></span>
</div>
