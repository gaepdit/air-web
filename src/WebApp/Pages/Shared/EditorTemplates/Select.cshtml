@using AirWeb.WebApp.Platform.PageModelHelpers
@using LabelTagHelper = AirWeb.WebApp.Platform.PageModelHelpers.LabelTagHelper
@model object?
@{
    var items = (IEnumerable<SelectListItem>)ViewData["Items"]!;
    var placeholder = ViewData.ContainsKey("Placeholder") ? (string)ViewData["Placeholder"]! : DefaultText.SelectOptionRequired;
}

<div class="form-floating">
    <select asp-for="@__model" asp-items="items" class="form-select">
        <option value="">@placeholder</option>
    </select>
    <label asp-for="@__model" class="form-label"></label>
    <span asp-validation-for="@__model" class="invalid-feedback"></span>
</div>
