    <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(dto => dto.ResponseRequested)</dt>
    <dd class="col-sm-8 col-lg-9">@Html.DisplayFor(dto => dto.ResponseRequested, DisplayTemplate.BoolYesNo)</dd>
    @if (Model.ResponseRequested)
    {
        <dt class="col-sm-4 col-lg-3">@Html.DisplayNameFor(dto => dto.ResponseReceived)</dt>
