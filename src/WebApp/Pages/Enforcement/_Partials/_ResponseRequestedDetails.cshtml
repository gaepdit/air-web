@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model AirWeb.AppServices.Enforcement.EnforcementActionQuery.ResponseRequestedViewDto

<div class="mt-2">
    @if (Model.ResponseRequested)
    {
        @if (Model.IsResponseReceived)
        {
            if (Model.ResponseComment != null)
            {
                <em>
                    Response received
                    @Html.DisplayFor(_ => Model.ResponseReceived, DisplayTemplate.ShortDateOnlyNullable):
                </em>
                <div>@Model.ResponseComment</div>
            }
            else
            {
                <em>
                    Response received
                    @Html.DisplayFor(_ => Model.ResponseReceived, DisplayTemplate.ShortDateOnlyNullable).
                </em>
            }
        }
        else
        {
            <strong>Response requested.</strong>
        }
    }
    else
    {
        <em>No response requested.</em>
    }
</div>
