@page "{handler?}"
@using AirWeb.AppServices.Sbeap.Customers.Dto
@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model IndexModel
@{
    ViewData["Title"] = "Customer Search";
}

<h1>@ViewData["Title"]</h1>

<div class="text-body-secondary ps-2">
    <em>All fields are optional.</em>
</div>
<div class="p-3 rounded-3 bg-light-subtle">
    <form method="get" asp-page-handler="Search" asp-fragment="SearchResults">
        <div class="form-floating mb-3">
            <input asp-for="Spec.Name" name="@nameof(Model.Spec.Name)" class="form-control" />
            <label asp-for="Spec.Name" class="form-label"></label>
        </div>
        <div class="row">
            <div class="col-md mb-3">
                <div class="form-floating">
                    <input asp-for="Spec.Description" name="@nameof(Model.Spec.Description)" class="form-control" />
                    <label asp-for="Spec.Description" class="form-label"></label>
                </div>
            </div>
            <div class="col-md mb-3">
                <div class="form-floating">
                    <select asp-for="Spec.SicCode" name="@nameof(Model.Spec.SicCode)" asp-items="Model.SicSelectList" class="form-select">
                        <option value="">@DefaultText.SelectOptionAny</option>
                    </select>
                    <label asp-for="Spec.SicCode" class="form-label"></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md mb-3">
                <div class="form-floating">
                    <input asp-for="Spec.City" name="@nameof(Model.Spec.City)" class="form-control" />
                    <label asp-for="Spec.City" class="form-label"></label>
                </div>
            </div>
            <div class="col-md mb-3">
                <div class="form-floating">
                    <select asp-for="Spec.County" name="@nameof(Model.Spec.County)"
                            asp-items="IndexModel.CountiesSelectList" class="form-select">
                        <option value="">@DefaultText.SelectOptionAny</option>
                    </select>
                    <label asp-for="Spec.County" class="form-label"></label>
                </div>
            </div>
            @if (Model.ShowDeletionSearchOptions)
            {
                <div class="col-md mb-3">
                    <div class="form-floating">
                        <select asp-for="Spec.DeletedStatus" name="@nameof(Model.Spec.DeletedStatus)"
                                asp-items="@Html.GetEnumSelectList<CustomerDeletedStatus>()" class="form-select">
                            <option value="">@DefaultText.SelectOptionNotDeleted</option>
                        </select>
                        <label asp-for="Spec.DeletedStatus" class="form-label"></label>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3 mb-1">
            <button id="SearchButton" type="submit" class="btn btn-primary col-sm-3 me-2">Search</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-sm-3 col-md-2">Clear Form</a>
        </div>
    </form>
</div>

@if (Model.ShowResults)
{
    <h3 id="SearchResults" class="mt-4">Search Results</h3>

    @if (Model.SearchResults.TotalCount == 0)
    {
        <p class="lead text-info">No search results found.</p>
    }
    else
    {
        <table class="table" aria-label="User search results">
            <caption class="caption-top">
                <partial name="Shared/_PaginationNavAndCount" model="Model.ResultsDisplay" />
            </caption>

            <thead>
            <tr>
                <partial name="Shared/_SortableTableColHead" model="Model.Spec" view-data="new ViewDataDictionary(ViewData)"
                         view-data-Heading="@("Name")" view-data-Ascender="@nameof(CustomerSortBy.Name)" view-data-Descender="@nameof(CustomerSortBy.NameDesc)" />
                <partial name="Shared/_SortableTableColHead" model="Model.Spec" view-data="new ViewDataDictionary(ViewData)"
                         view-data-Heading="@("Description")" view-data-Ascender="@nameof(CustomerSortBy.Description)" view-data-Descender="@nameof(CustomerSortBy.DescriptionDesc)" />
                <th scope="col">@Html.DisplayNameFor(m => m.Spec.County)</th>
                <th scope="col">
                    <span class="visually-hidden">Actions</span>
                </th>
            </tr>
            </thead>

            <tbody class="table-group-divider">
            @foreach (var item in Model.SearchResults.Items)
            {
                <tr class="@(item.IsDeleted ? "bg-secondary-subtle" : "")">
                    <th scope="row" class="fw-normal">
                        @Html.DisplayFor(m => item.Name, DisplayTemplate.TextOrPlaceholder, additionalViewData: new { Placeholder = DefaultText.PlaceholderNone })
                        @if (item.IsDeleted)
                        {
                            <br />
                            <strong>DELETED</strong>
                        }
                    </th>
                    <td>@Html.DisplayFor(m => item.Description, DisplayTemplate.TruncateText, additionalViewData: new { MaxLength = 50 })</td>
                    <td>@Html.DisplayFor(m => item.County, DisplayTemplate.TextOrPlaceholder, additionalViewData: new { Placeholder = DefaultText.PlaceholderNone })</td>
                    <td>
                        <a asp-page="Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.Id.ToString()">View</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <partial name="_PaginationNav" model="Model.ResultsDisplay" />
    }
}

@section Scripts {
    <script src="~/js/formSearch.js"></script>
}
