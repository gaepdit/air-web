@page
@using AirWeb.AppServices.Sbeap.Cases.Dto
@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model IndexModel
@{
    ViewData["Title"] = "Small Business Environmental Assistance Program";
}

<vc:notifications />

<h1>SBEAP Dashboard</h1>

<div class="card mt-4">
    <div class="card-header">
        <h2 class="h5" id="open-cases">Open Cases</h2>
    </div>
    <div class="card-body">
        @if (Model.OpenCases.CurrentCount == 0)
        {
            <p><em>None.</em></p>
        }
        else
        {
            <table class="table table-borderless small m-0" aria-labelledby="open-cases">
                <thead>
                <tr>
                    <th scope="col" class="ps-3">Date Opened</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Case Description</th>
                    <th scope="col" class="pe-3"><span class="visually-hidden">Actions</span></th>
                </tr>
                </thead>

                <tbody class="table-group-divider">
                @foreach (var item in Model.OpenCases.Items)
                {
                    <tr>
                        <th scope="row" class="fw-normal ps-3">@Html.DisplayFor(m => item.CaseOpenedDate, DisplayTemplate.ShortDateOnly)</th>
                        <td>@Html.DisplayFor(m => item.CustomerName, DisplayTemplate.TextOrPlaceholder, additionalViewData: new { Placeholder = DefaultText.PlaceholderNone })</td>
                        <td>@Html.DisplayFor(m => item.Description, DisplayTemplate.TruncateText, new { MaxLength = 50 })</td>
                        <td class="pe-3">
                            <a asp-page="Cases/Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.Id.ToString()">View</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
    @if (Model.OpenCases.CurrentCount > 0)
    {
        <div class="card-footer small">
            <div class="container px-0">
                <div class="row justify-content-between align-items-center">
                    <div class="col-md">
                        Total: @Html.DisplayFor(_ => Model.OpenCases.TotalCount)
                        @if (Model.OpenCases.TotalPages > 1)
                        {
                            <br />
                            @:Showing: @Model.OpenCases.FirstItemIndex.ToString() â€“ @Model.OpenCases.LastItemIndex.ToString()
                        }
                    </div>
                    @if (Model.OpenCases.HasNextPage)
                    {
                        <div class="col-md text-end align">
                            <a asp-page="Cases/Index" asp-route-handler="search" asp-route-Status="0" asp-fragment="SearchResults"
                               asp-route-Sort="@(nameof(CaseworkSortBy.OpenedDate))" class="btn btn-sm btn-outline-info me-2">
                                View All
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
