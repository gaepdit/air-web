@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@model IEnumerable<AirWeb.AppServices.Compliance.Fces.SupportingData.FeeYearSummaryDto>

<h2 id="permit-fees">Five-Year History of Annual Permit Fees</h2>

@{
    if (!Model.Any())
    {
        <div class="fce-content">None.</div>
        return;
    }

    var firstItem = Model.FirstOrDefault()!;
}

<table aria-labelledby="permit-fees">
    <thead>
    <tr>
        <th scope="col" class="minimize-col-width">@Html.DisplayNameFor(_ => firstItem.Year)</th>
        <th scope="col" class="align-right minimize-col-width">@Html.DisplayNameFor(_ => firstItem.InvoicedAmount)</th>
        <th scope="col" class="align-right">@Html.DisplayNameFor(_ => firstItem.AmountPaid)</th>
        <th scope="col" class="align-right">@Html.DisplayNameFor(_ => firstItem.Balance)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.Status)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in Model)
    {
        <tr>
            <th scope="row">@i.Year</th>
            <td class="align-right">@Html.DisplayFor(_ => i.InvoicedAmount, DisplayTemplate.Currency)</td>
            <td class="align-right">@Html.DisplayFor(_ => i.AmountPaid, DisplayTemplate.Currency)</td>
            <td class="align-right">@Html.DisplayFor(_ => i.Balance, DisplayTemplate.Currency)</td>
            <td>@i.Status</td>
        </tr>
    }
    </tbody>
</table>
