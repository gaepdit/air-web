@using AirWeb.WebApp.Pages.Shared.DisplayTemplates
@using Microsoft.OpenApi.Extensions
@model IEnumerable<AirWeb.AppServices.Compliance.Fces.SupportingData.EnforcementCaseSummaryDto>

<h2 id="enforcement-history">Five-Year History of Enforcement Cases</h2>

@{
    if (!Model.Any())
    {
        <div class="fce-content">None.</div>
        return;
    }

    var firstItem = Model.FirstOrDefault()!;
}

<table aria-labelledby="enforcement-history">
    <thead>
    <tr>
        <th scope="col" class="no-wrap">@Html.DisplayNameFor(_ => firstItem.Id)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.ResponsibleStaff)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.CaseFileStatus)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.EnforcementDate)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.LatestActionActionType)</th>
        <th scope="col">@Html.DisplayNameFor(_ => firstItem.LatestActionIssueDate)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in Model)
    {
        <tr>
            <th scope="row">@i.Id</th>
            <td>@i.ResponsibleStaff?.SortableFullName</td>
            <td>@i.CaseFileStatus.GetDisplayName()</td>
            <td>@Html.DisplayFor(_ => i.EnforcementDate, DisplayTemplate.LongDateOnly)</td>
            <td>@Html.DisplayFor(_ => i.LatestActionActionType, DisplayTemplate.EnumNullable)</td>
            <td>@Html.DisplayFor(_ => i.LatestActionIssueDate, DisplayTemplate.LongDateOnlyNullable)</td>
        </tr>
    }
    </tbody>
</table>
