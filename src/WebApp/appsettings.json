    "ClientId": "[Enter the Application (client) ID from the Azure portal]"
  },
  "OrganizationInfo": {
    "NameOfDirector": "[Enter the name of the director of the organization]"
  },
  "Support": {
    "CustomerSupportEmail": "Customer.Support@email.invalid",
    "TechnicalSupportEmail": "Technical.Support@email.invalid",
