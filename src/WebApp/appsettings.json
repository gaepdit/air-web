{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Integrated Security=true;Database=AirWebLocal",
    "MigrationConnection": "Server=(localdb)\\MSSQLLocalDB;Integrated Security=true;Database=AirWebLocal",
    "IaipConnection": ""
  },
  "SeedUserRoles": [],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EnabledLoginProviders": [],
