    "OktaDomain": "https://${yourOktaDomain}",
    "ClientId": "${clientId}",
    "ClientSecret": "${clientSecret}",
    "AuthorizationServerId": "default"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
